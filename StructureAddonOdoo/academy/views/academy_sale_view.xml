<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="academy_sale_quotation_action" model="ir.actions.act_window">
        <field name="name">Sale/Ordens/Quotation</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">academy.sale</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="academy_sale_quotation_view_tree" model="ir.ui.view">
        <field name="name">academy.sale.view.tree</field>
        <field name="model">academy.sale</field>
        <field name="arch" type="xml">
            <tree string="Quotation">
                <field name="name" />
                <field name="create_date" />
                <field name="customer_id" />
                <field name="product_id" />
                <field name="product_qty"  sum="Product qty"/>
                <field name="amount_untaxed" sum="Total Base"/>
                <field name="amount_tax" sum="Tax Tax"/>
                <field name="amount_total" sum="Total " />
                <field name="state" />
            </tree>
        </field>
    </record>

    <record id="academy_sale_quotation_view_form" model="ir.ui.view">
        <field name="name">academy.sale.view.form</field>
        <field name="model">academy.sale</field>
        <field name="arch" type="xml">
            <form>
                <sheet>

                        <group>
                            <field name="name" />
                            <field name="customer_id" /> 
                            <field name="create_date" /> 
                            <field name="state" />        
                        </group>
                        
                        <notebook>
                            <page string="Products">

                                <tree string="Sales Lines" editable="bottom">
                                    <field name="product_id" />
                                </tree>

                                
                            </page>
                        </notebook>
                       

                        <group class="oe_subtotal_footer oe_right">
                            <field name="amount_untaxed" widget="monetary"/>
                             <field name="amount_tax" />
                            <div class="oe_subtotal_footer_separator oe_inline">
                               <label for="amount_total"/>
                            </div>
                            <field name="amount_total" nolabel="1" class="oe_subtotal_footer_separator" widget="monetary" />
                            <!-- <field name="price_subtotal" nolabel="1" class="oe_subtotal_footer_separator" widget="monetary" options="{'currency_field': 'currency_id'}"/> -->
                        </group>

                </sheet>
            </form>
        </field>
    </record>

     <record id="academy_sale_line_view_tree" model="ir.ui.view">
        <field name="name">academy.sale.line.view.tree</field>
        <field name="model">academy.sale.line</field>
        <field name="arch" type="xml">
            <tree>
                <field name="product_id" />
                <field name="price_unit" />
                <field name="tax_id" />
                <field name="price_subtotal" />
            </tree>
        </field>
    </record>
            
    
</odoo>
