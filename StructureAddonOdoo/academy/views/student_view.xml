<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="student_action" model="ir.actions.act_window">
        <field name="name">Student</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">student</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="student_view_tree" model="ir.ui.view">
        <field name="name">student.view.tree</field>
        <field name="model">student</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="code" /> 
                <field name="course_id" /> 
                <field name="course_purchase_id" />
                <field name="teacher_id" /> 
            </tree>
        </field>
    </record>


    <record id="student_view_form" model="ir.ui.view">
        <field name="name">student.view.form</field>
        <field name="model">student</field>
        <field name="arch" type="xml">
            <form >
                <sheet>
                    <group>
                       <field name="name" /> 
                       <field name="code" /> 
                       <field name="course_id" />
                       <field name="course_purchase_id" />  
                       <field name="teacher_id" /> 
                      
                    </group>

                    <group string="Lines Student">
                       <field name="student_line_ids" nolabel="1" /> 
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    
    <record id="student_line_action" model="ir.actions.act_window">
        <field name="name">Student Line</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">student.line</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="student_line_view_tree" model="ir.ui.view">
        <field name="name">student.line.view.tree</field>
        <field name="model">student.line</field>
        <field name="arch" type="xml">
            <tree>
                <field name="course_id" /> 
                <field name="teacher_id" /> 
            </tree>
        </field>
    </record>

</odoo>
