<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="teacher_action" model="ir.actions.act_window">
        <field name="name">Teacher</field>
        <field name="res_model">teacher</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="teacher_view_tree" model="ir.ui.view">
        <field name="name">teacher.view.tree</field>
        <field name="model">teacher</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
            </tree>
        </field>
    </record>

    <record id="teacher_view_form" model="ir.ui.view">
        <field name="name">teacher.view.form</field>
        <field name="model">teacher</field>
        <field name="arch" type="xml">
            <form >
                <sheet>
                    <group>
                       <field name="name" /> 
                       <field name="course_id" />
                       <field name="student_id" />             
                    </group>
                    <group>
                       <field name="course_line_ids" /> 
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
</odoo>
