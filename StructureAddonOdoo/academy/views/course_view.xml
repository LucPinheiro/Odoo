<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="course_action" model="ir.actions.act_window">
        <field name="name">Course</field>
        <field name="res_model">course</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="course_view_tree" model="ir.ui.view">
        <field name="name">course.view.tree</field>
        <field name="model">course</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="subject_id" />
                <field name="student_id" />
                <field name="student_id_count" />
                <field name="teacher_id" />
                <field name="price_unit" sum="Price Unit"/>
                <field name="tax_id"/>
                <field name="price_tax" />
                <field name="price_subtotal" sum="Total"/>
      
            </tree>
        </field>
    </record>

    <record id="course_view_form" model="ir.ui.view">
        <field name="name">course.view.form</field>
        <field name="model">course</field>
        <field name="arch" type="xml">
            <form >
                <sheet>
                    <group>
                       <field name="name" /> 
                       <field name="subject_id" />
                        <field name="student_id" /> 
                        <field name="student_id_count" />
                        <field name="teacher_id" /> 
                       <field name="price_unit" />
                       <field name="tax_id"/>
                       <field name="price_subtotal" />
       
                    </group>


                </sheet>
                    <!-- <footer>
                        <button 
                            name="save_and_new_course"
                            class="btn-primary"
                            type="object" 
                            string="Save and New" />
                        <button 
                            name="save_and_next_course"
                            class="btn-primary"
                            type="object" 
                            string="Save and Next" />
                        <button 
                            name="save_and_close_course"
                            class="btn-primary"
                            type="object" 
                            string="Save and Close" />
                        <button string="Cancel" class="btn-secondary" special="cancel" />
                    </footer> -->
            </form>
        </field>
    </record>

    <record id="course_line_action" model="ir.actions.act_window">
        <field name="name">Course Line</field>
        <field name="res_model">course.line</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="course_line_view_tree" model="ir.ui.view">
        <field name="name">course.line.view.tree</field>
        <field name="model">course.line</field>
        <field name="arch" type="xml">
            <tree>
                <field name="course_id" />
                <field name="student_line_ids" />
                <field name="teacher_line_ids" />
            </tree>
        </field>
    </record>


    
</odoo>
